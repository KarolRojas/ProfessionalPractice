<%- model_class = ProjectProfile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @project_profile.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:validity) %>:</strong></dt>
  <dd><%= @project_profile.validity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:region) %>:</strong></dt>
  <dd><%= @project_profile.region %></dd>
  <dt><strong><%= model_class.human_attribute_name(:institution_name) %>:</strong></dt>
  <dd><%= @project_profile.institution_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @project_profile.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:objectives) %>:</strong></dt>
  <dd><%= @project_profile.objectives %></dd>
  <dt><strong><%= model_class.human_attribute_name(:scale) %>:</strong></dt>
  <dd><%= @project_profile.scale %></dd>
  <dt><strong><%= model_class.human_attribute_name(:context) %>:</strong></dt>
  <dd><%= @project_profile.context %></dd>
  <dt><strong><%= model_class.human_attribute_name(:disciplines) %>:</strong></dt>
  <dd><%= @project_profile.disciplines %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              project_profiles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_project_profile_path(@project_profile), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              project_profile_path(@project_profile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
