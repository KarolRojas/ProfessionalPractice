<%- model_class = ProjectProfile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:validity) %></th>
      <th><%= model_class.human_attribute_name(:region) %></th>
      <th><%= model_class.human_attribute_name(:institution_name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:objectives) %></th>
      <th><%= model_class.human_attribute_name(:scale) %></th>
      <th><%= model_class.human_attribute_name(:context) %></th>
      <th><%= model_class.human_attribute_name(:disciplines) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @project_profiles.each do |project_profile| %>
      <tr>
        <td><%= link_to project_profile.id, project_profile_path(project_profile) %></td>
        <td><%= project_profile.name %></td>
        <td><%= project_profile.validity %></td>
        <td><%= project_profile.region %></td>
        <td><%= project_profile.institution_name %></td>
        <td><%= project_profile.description %></td>
        <td><%= project_profile.objectives %></td>
        <td><%= project_profile.scale %></td>
        <td><%= project_profile.context %></td>
        <td><%= project_profile.disciplines %></td>
        <td><%=l project_profile.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_project_profile_path(project_profile), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      project_profile_path(project_profile),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_project_profile_path,
            :class => 'btn btn-primary' %>
